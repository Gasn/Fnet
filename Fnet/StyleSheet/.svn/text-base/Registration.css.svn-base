
body {
	margin: 0;
	padding: 0;
	background: #FFFFFF url('../images/img01.jpg') repeat-x;
	font: normal 11px Tahoma, Arial, Helvetica, sans-serif;
	color: #666666;
}

h1, h2, h3 {
	margin: 0;
	padding: 0;
	font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
	color: #F49500;
}

h2 {
	text-transform: uppercase;
	font-size: 18px;
}

h3 {
	text-transform: uppercase;
	letter-spacing: 2px;
	font-size: 13px;
}

p, blockquote, ul, ol {
	line-height: 18px;
	text-align: justify;
}

blockquote {
	padding-left: 20px;
	background: url('../images/img05.gif') repeat-y;
}

a {
	color: #F49500;
}

a:hover {
	text-decoration: none;
}

/* Content */

#content {
	width: 685px;
	margin: 0 auto 20px auto;
	padding: 30px;
	background: url('../images/img05.gif') repeat-y;
}




/* Posts2 for registration pages */

#posts2 {
	float:none;
	width: 717px; 
}

.field {
	margin-left:25px;
}


