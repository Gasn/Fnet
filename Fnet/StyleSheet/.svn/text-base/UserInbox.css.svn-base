body {
	margin: 0;
	padding: 0;
	background: #FFFFFF url('../images/img01.jpg') repeat-x;
	font: normal 12px Tahoma, Arial, Helvetica, sans-serif;
	color: #666666;
}

h1, h2{
	margin: 0;
	padding: 0;
	font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
	color: #F49500;
}

h2 {
	text-transform: uppercase;
	font-size: 18px;
}

h3 
{
	margin: 0;
	padding: 0;
	font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;	
	text-transform: uppercase;
	letter-spacing: 2px;
	font-size: 13px;
	color: #F49500;
}

p, blockquote {
	line-height: 18px;
	text-align: justify;
}

blockquote {
	padding-left: 20px;
	background: url('../images/img05.gif') repeat-y;
}

a {
	color: #F49500;
}

a:hover {
	text-decoration: none;
}

#contentInbox
{
	float: none;
	margin-left: 15px;
	margin-right: 15px;
}


/* TABLE LIST INBOX */

.inboxTable
{
	margin-right: 20px;
	margin-left: 20px;
	width: 680px;
}

.inboxTable td
{
	padding-left: 10px;
	padding-right: 10px;
	padding-top: 5px;
	padding-bottom: 5px;
}

.Tableheader
{
	background-color: #F5FFFA;
}

.cols1
{
	width: 170px;
	border-left: dotted 1px #eef;
	border-bottom: solid 1px #eee;
}

.cols2
{
	border-left: dotted 1px #eef;
	border-bottom: solid 1px #eee;
}

.cols3
{
	width: 130px;
	border-bottom: solid 1px #eee;
}

.mailList
{
	background-color: #ffffff;
}

.mailList:hover
{
	background-color: #eeeeee;
}

/* READING INBOX MESSAGE*/
.readingInbocTable 
{
	width: 500px;
}

.Rcols1
{
	width: 40px;
}

.Rcols2
{
	background-color: #F5FFFA;
	width: 460
}

.readingInbocTable td
{
	padding: 5px;
	border: solid 1px #eee;
	text-align: left;
}

.messageDetails
{
	margin: 5px;
}

.messageCellDetail
{
	height: 200px;
	vertical-align: top;
	padding: 10px;
	border: #bbb;
}

.inboxTable a
{
	color: Black;
	padding: 10px;
}