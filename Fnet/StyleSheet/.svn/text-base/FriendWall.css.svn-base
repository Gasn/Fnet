body {
	margin: 0;
	padding: 0;
	background: #FFFFFF url('../images/img01.jpg') repeat-x;
	font: normal 12px Tahoma, Arial, Helvetica, sans-serif;
	color: #666666;
}

h1, h2{
	margin: 0;
	padding: 0;
	font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
	color: #F49500;
}

h2 {
	text-transform: uppercase;
	font-size: 18px;
}

h3 
{
	margin: 0;
	padding: 0;
	font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;	
	text-transform: uppercase;
	letter-spacing: 2px;
	font-size: 13px;
	color: #F49500;
}

p, blockquote {
	line-height: 18px;
	text-align: justify;
}

blockquote {
	padding-left: 20px;
	background: url('../images/img05.gif') repeat-y;
}

a {
	color: #F49500;
}

a:hover {
	text-decoration: none;
}

.contentFriend
{
	float: none;
	margin-left: 25px;
	margin-right: 15px;
}

.friendNavigation
{
	width: 676px;
	
	
}

.friendNavigation td
{
	text-align: left;
	vertical-align: middle;
	padding: 15px;
	
}

.colsPic
{
	width: 140px;
	border: solid 1px #eee;
	background-color: #FFFFE0;

}

.friendDisplay
{
	border-bottom: solid 1px #aaa;
	padding: 15px;
}

/* COMMENT BOX */

#postNewComments td
{
	padding: 15px;
	border: dotted 1px #eee;
	background-color: #F5FFFA;
}

.commentSection
{
	border-bottom: dotted 1px #ccc;
}


/* PREVIOUS COMMENT */

#previousComments
{
	padding-bottom: 20px;
	text-align: center;
}

.prevPost
{
	width: 513px;
	border: dotted 1px #ccc;
}

.prevPost td
{
	border: dotted 1px #ccc;
	
}

.cols1
{
	padding: 10px;
	width: 100px;
}


.cols2
{
	padding-left: 20px;
	padding-top: 5px;
	text-align: left;
}


/* SEND FREIND MESSAGE .............................................................................................................. */

.sendFriendMessage
{
	Background-color: #F1FAF1;
}

.sendFriendMessage td
{
	vertical-align: top;
	padding: 10px;
	text-align: left;
}