body {
	margin: 0;
	padding: 0;
	background: #FFFFFF url('../images/img01.jpg') repeat-x;
	font: normal 12px Tahoma, Arial, Helvetica, sans-serif;
	color: #666666;
}

h1, h2{
	margin: 0;
	padding: 0;
	font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
	color: #F49500;
}

h2 {
	text-transform: uppercase;
	font-size: 18px;
}

h3 
{
	margin: 0;
	padding: 0;
	font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;	
	text-transform: uppercase;
	letter-spacing: 2px;
	font-size: 13px;
	color: #F49500;
}

p, blockquote {
	line-height: 18px;
	text-align: justify;
}

ul
{
	list-style-type: none;
	margin-left: 0px;
}

li {
	margin-bottom: 15px;
}


blockquote {
	padding-left: 20px;
	background: url('../images/img05.gif') repeat-y;
}

a {
	
}

a:hover {
	text-decoration: none;
}

#contentSelectGroup
{
	float: none;
	margin-left: 30px;
	margin-right: 30px;
}

.groupInfo
{
	width: 600px;
	margin-left:40px;
	font: normal 12px Tahoma, Arial, Helvetica, sans-serif;
	color: #666666;
}

.groupInfo
{
	margin-left: 20px;
	margin-right: 20px;
}

/* TABLE GROUP LIST */

.groupList
{
	width: 100%;
	background-color: #FAFFDA;
	margin: auto;

}


.groupList td
{
	padding-top: 10px;
	padding-left: 10px;
	padding-bottom: 10px;
	vertical-align: top;
	border-bottom: 1px inset #aaa;
}
/* COLS OF TABLE CONTENT LIST OF GROUP */

.col1
{
	width: 12px;
}

.col2
{
	width: 150px;
}

